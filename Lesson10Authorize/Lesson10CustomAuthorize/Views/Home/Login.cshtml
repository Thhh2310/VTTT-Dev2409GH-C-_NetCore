@model Lesson10CustomAuthorize.Models.Login
@{
    ViewData["Title"] = "Login Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border p-3">
    <h2>Login Information</h2>
    <form asp-action="Login" asp-controller="Home" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" asp-for="Email" placeholder="name@gmail.com" value="admin@gmail.com" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" asp-for="Password" placeholder="" value="123456" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
