@{
    var account = ViewBag.account;
}

<h2>Your Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@account.Avatar" style="width: 100%" />
    </div>
    <div class="col-md-8">
        <p>Full Name: @account.Name</p>
        <p>Email: @account.Email</p>
        <p>Phone: @account.Phone</p>
        <p>Address: @account.Address</p>
        <p>Bio: @account.Bio</p>
        <p>Gender: 
            @if (account.Gender == 1)
            {
                <span>Male</span>
            }
            else
            {
                <span>Female</span>
            }
        </p>
        <p>Birthday: @account.Birthday</p>
        <p>
            <a asp-controller="Account" asp-action="Index" class="btn btn-sm btn-success">Back to list</a>
        </p>
    </div>
</div>



